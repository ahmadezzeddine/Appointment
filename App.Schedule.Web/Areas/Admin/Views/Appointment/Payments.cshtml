@using PagedList;
@using PagedList.Mvc;
@using App.Schedule.Domains.ViewModel;
@model ResponseViewModel<IPagedList<AppointmentViewModel>>
@{
    ViewBag.Title = "Appointment Payments";
    Layout = "~/Views/Shared/_AfterLoginMaster.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Appointment Payments</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @Html.Partial("~/Views/SubViews/_ErrorView.cshtml", Model)
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <b>Information</b>
            </div>
            <div class="panel-body">
                @if (Model == null || Model.Data == null)
                {
                    <text>Please try again later.</text>
                    return;
                }
                <div class="tab-content">
                    <div class="tab-pane active">
                        <div class="col-lg-12">
                            <div class="row">
                                <div class="form-group input-group input-group-sm">
                                    <input type="text" class="form-control" id="searchKeyword" value="@ViewBag.search" placeholder="Search here" />
                                    <div class="input-group-btn">
                                        <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("payments")?search=' + $('#searchKeyword').val()">
                                            <i class="glyphicon glyphicon-search"></i>
                                            Search
                                        </button>
                                    </div>
                                </div>
                                <table class="table table-condensed table-striped table-hover sortable" cellspacing="0" cellpadding="0">
                                    <thead>
                                        <tr>
                                            <th>
                                                Title
                                            </th>
                                            <th>
                                                Time
                                            </th>
                                            <th>
                                                Is All Day
                                            </th>
                                            <th>
                                                Status
                                            </th>
                                            <th>
                                                Active
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Data.Count <= 0)
                                        {
                                            <tr>
                                                <td colspan="7">
                                                    No payments has been done yet.
                                                </td>
                                            </tr>
                                            return;
                                        }
                                        @foreach (var item in Model.Data)
                                        {
                                            if (item != null)
                                            {
                                                <tr>
                                                    <td>
                                                        <div class="row">
                                                            <div class="col-lg-12">
                                                                @item.Title
                                                            </div>
                                                            <div class="col-lg-12">
                                                                <small>
                                                                    <a href="@Url.Action("view", "appointment", new { id = item.Id})">
                                                                        #@item.GlobalAppointmentId
                                                                    </a>
                                                                </small>
                                                            </div>
                                                            <div class="col-lg-12">
                                                                <small>@item.BusinessServiceName</small>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="row">
                                                            <div class="col-lg-12">
                                                                @String.Format("From: {0} To: {1}", item.StartTime.Value.ToShortDateString(), item.EndTime.Value.ToShortDateString())
                                                            </div>
                                                            <div class="col-lg-12">
                                                                <small>
                                                                    @String.Format("{0} - {1}", item.StartTime.Value.ToShortTimeString(), item.EndTime.Value.ToShortTimeString())
                                                                </small>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        @item.IsAllDayEvent
                                                    </td>
                                                    <td>
                                                        @if (item.StatusType != null)
                                                        {
                                                            <text>@Enum.GetName(typeof(StatusType), (int)@item.StatusType)</text>
                                                        }
                                                    </td>
                                                    <td>
                                                        @item.IsActive
                                                    </td>
                                                    <td class="text-right" style="width:150px;">
                                                        @{
                                                            var getStatus = item.StatusType <= 1 ? true : false;
                                                            if (getStatus)
                                                            {
                                                                <text>
                                                                    <a title="Edit" onclick="@("window.location.href='" + @Url.Action("edit", "appointment", new { area = "admin", id = item.Id }) + "'");" class="btn btn-default btn-xs">
                                                                        <span class="fa fa-pencil"></span>
                                                                    </a>
                                                                </text>
                                                            }
                                                            <a title="Attachment" onclick="@("window.location.href='" + @Url.Action("attachments", "appointment", new { area = "admin", id = item.Id }) + "'");" class="btn btn-default btn-xs">
                                                                <span class="fa fa-file"></span>
                                                            </a>
                                                            <a title="Feedback" onclick="@("window.location.href='" + @Url.Action("feedbacks", "appointment", new { area = "admin", id = item.Id }) + "'");" class="btn btn-default btn-xs">
                                                                <span class="fa fa-hand-peace-o"></span>
                                                            </a>
                                                            <a title="View" onclick="@("window.location.href='" + @Url.Action("view", "appointment", new { area = "admin", id = item.Id }) + "'");" class="btn btn-default btn-xs">
                                                                <span class="fa fa-eye"></span>
                                                            </a>
                                                            <a title="Invoice" target="_blank" href="@Url.Action("invoicehtml", "appointment", new { area = "admin", id = item.Id })" class="btn btn-default btn-xs">
                                                                <span class="fa fa-file-pdf-o"></span>
                                                            </a>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
                <div>
                    <span class="text-left">
                        <a href="@Url.Action("index", "accountsetup", new { area = "admin" })" class="btn btn-default btn-sm">
                            Account Setup
                        </a>
                    </span>
                    <span class="pull-right">
                        @Html.PagedListPager(Model.Data, page => Url.Action("payments", new { page }))
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>
