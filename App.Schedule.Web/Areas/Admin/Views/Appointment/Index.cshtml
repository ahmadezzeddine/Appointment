@using PagedList;
@using PagedList.Mvc;
@using App.Schedule.Domains.ViewModel;
@model ResponseViewModel<IPagedList<AppointmentViewModel>>
@{
    ViewBag.Title = "Appointments";
    Layout = "~/Views/Shared/_AfterLoginMaster.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Appointment List</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @Html.Partial("~/Views/SubViews/_ErrorView.cshtml", Model)
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <b>Employe List</b>
                <a href="@Url.Action("add", "appointment", new { area = "admin" })" class="btn btn-info btn-xs pull-right">
                    <span class="glyphicon glyphicon-plus"></span> Add
                </a>
            </div>
            <div class="panel-body">
                @if (Model == null || Model.Data == null)
                {
                    <text>Please try again later.</text>
                    return;
                }
                <div class="tab-content">
                    <div class="tab-pane active">
                        <div class="col-lg-12">
                            <div class="row">
                                <div class="form-group input-group input-group-sm">
                                    <input type="text" class="form-control" id="searchKeyword" value="@ViewBag.search" placeholder="Search here" />
                                    <div class="input-group-btn">
                                        <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("Index")?search=' + $('#searchKeyword').val()">
                                            <i class="glyphicon glyphicon-search"></i>
                                            Search
                                        </button>
                                    </div>
                                </div>
                                <table class="table table-condensed table-striped table-hover sortable" cellspacing="0" cellpadding="0">
                                    <thead>
                                        <tr>
                                            <th>
                                                Title
                                            </th>
                                            <th>
                                                Status
                                            </th>
                                            <th>
                                                Created
                                            </th>
                                            <th class="col-lg-2 text-right">
                                                Action
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Data)
                                        {
                                            if (item != null)
                                            {
                                                <tr>
                                                    <td>
                                                        @item.Title
                                                    </td>
                                                    <td>
                                                        @item.IsActive
                                                    </td>
                                                    <td>
                                                        @item.Created
                                                    </td>
                                                    <td class="text-right">
                                                        <a title="Edit" onclick="@("window.location.href='" + @Url.Action("edit", "appointment", new { area = "admin", id = item.Id }) + "'");" class="btn btn-default btn-xs">
                                                            <span class="fa fa-pencil"></span>
                                                        </a>
                                                        <a title="Active or Deactive" onclick="@("window.location.href='" + @Url.Action("deactive", "appointment", new { area = "admin", id = item.Id }) + "'");" class="btn btn-default btn-xs">
                                                            <span class="fa fa-check"></span>
                                                        </a>
                                                        <a title="Update Password" onclick="@("window.location.href='" + @Url.Action("deactive", "appointment", new { area = "admin", id = item.Id }) + "'");" class="btn btn-default btn-xs disabled">
                                                            <span class="fa fa-lock"></span>
                                                        </a>
                                                        <a title="Delete" onclick="@("window.location.href='" + @Url.Action("delete", "appointment", new { area = "admin", id = item.Id }) + "'");" class="btn btn-default btn-xs">
                                                            <span class="fa fa-trash"></span>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
                <div>
                    <span class="text-left">
                        <a href="@Url.Action("index", "accountsetup", new { area = "admin" })" class="btn btn-default btn-sm">
                            Account Setup
                        </a>
                    </span>
                    <span class="pull-right">
                        @Html.PagedListPager(Model.Data, page => Url.Action("Index", new { page }))
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>