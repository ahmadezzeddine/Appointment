@using App.Schedule.Domains.ViewModel;
@model ResponseViewModel<AppointmentViewModel>

@{
    ViewBag.Title = "Delete Appointment";
    Layout = "~/Views/Shared/_AfterLoginMaster.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Delete appointment</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @Html.Partial("~/Views/SubViews/_ErrorView.cshtml", Model)
    </div>
</div>
<div class="row">
    <div class="col-lg-12">

        <div class="panel panel-default">
            <div class="panel-heading">
                <b>Appointment Info</b>
            </div>
            @using (Ajax.BeginForm("delete", "appointment", new AjaxOptions { }))
            {
                <div class="panel-body">
                    @if (Model == null & Model.Data == null)
                    {
                        <text>Please try again later.</text>
                        return;
                    }
                    <div class="tab-content">
                        <div class="form-group">
                            <div class="text-danger">Are you sure want to delete?</div>
                        </div>
                        <div class="row">
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(d => d.Data.Id)
                            @Html.HiddenFor(d => d.Data.Title)
                            <div class="form-group col-lg-6">
                                <label>Title</label>
                                <div class="form-control">
                                    @Model.Data.Title
                                </div>
                            </div>
                            <div class="form-group col-lg-6">
                                <label>Global Id</label>
                                <div class="form-control">
                                    @Model.Data.GlobalAppointmentId
                                </div>
                            </div>
                            <div class="form-group col-lg-6">
                                <label>Is Active</label>
                                <div class="form-control">
                                    @Model.Data.IsActive
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-lg-12">
                            <input id="btnSave" class="btn btn-danger btn-sm " type="button" value="Delete" onclick="onSubmit(this,'@Url.Action("index", "appointment", new { area = "admin" })')" />
                            <input type="button" class="btn btn-default btn-sm" value="Back" onclick="@("window.location.href='" + @Url.Action("index", "appointment", new { area = "admin" }) + "'");" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>