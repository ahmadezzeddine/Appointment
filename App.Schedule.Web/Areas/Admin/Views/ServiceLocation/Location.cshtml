@using App.Schedule.Domains.ViewModel;
@model ResponseViewModel<ServiceLocationViewModel>

@{
    ViewBag.Title = "Service Location";
    Layout = "~/Views/Shared/_AfterLoginMaster.cshtml";
}

<ul class="nav nav-tabs">
    <li class="active"><a href="@Url.Action("location","servicelocation",new { area = "admin", id = ViewBag.Id})">Location</a></li>
    <li><a href="@Url.Action("hour","servicelocation",new { area = "admin", id = ViewBag.Id})">Business Hours</a></li>
    <li><a href="@Url.Action("holiday","servicelocation",new { area = "admin", id = ViewBag.Id})">Business Holiday</a></li>
</ul>
<div class="tab-content" style="padding:0px 10px;">
    <div class="tab-pane active">
        <div class="col-lg-12 margin10">
            <div class="row">
                @if (Model != null)
                {
                    if (!Model.Status)
                    {
                        <div class="alert alert-danger" role="alert">
                            <strong id="err_head">Info: </strong>
                            <span id="err_title">@Model.Message</span>
                        </div>
                    }
                    <table class="table table-striped">
                        <tr>
                            <td class="col-lg-4 col-md-4 col-sm-4 text-right">Name</td>
                            <td class="col-lg-8 col-md-8 col-sm-8">
                                <b>@Model.Data.Name</b>
                            </td>
                        </tr>
                        <tr>
                            <td class="col-lg-4 col-md-4 col-sm-4  text-right">Description</td>
                            <td class="col-lg-8 col-md-8 col-sm-8">
                                @if (Model.Data.Description.Length > 50)
                                {
                                    @Model.Data.Description.Substring(0, 50) <a href="#">More...</a>
                                }
                                else if (Model.Data.Description.Length < 50)
                                {
                                    @Model.Data.Description
                                }
                                else
                                {
                                    <text>---</text>
                                }
                            </td>
                        </tr>
                        <tr>
                            <td class="col-lg-4 col-md-4 col-sm-4 text-right">Address 1</td>
                            <td class="col-lg-8 col-md-8 col-sm-8">
                                @Model.Data.Add1
                            </td>
                        </tr>
                        <tr>
                            <td class="col-lg-4 col-md-4 col-sm-4 text-right">City</td>
                            <td class="col-lg-8 col-md-8 col-sm-8">
                                @Model.Data.City
                            </td>
                        </tr>
                        <tr>
                            <td class="col-lg-4 col-md-4 col-sm-4 text-right">State</td>
                            <td class="col-lg-8 col-md-8 col-sm-8">
                                @Model.Data.State
                            </td>
                        </tr>
                        <tr>
                            <td class="col-lg-4 col-md-4 col-sm-4 text-right">Zip</td>
                            <td class="col-lg-8 col-md-8 col-sm-8">
                                @Model.Data.Zip
                            </td>
                        </tr>
                        <tr>
                            <td class="col-lg-4 col-md-4 col-sm-4 text-right">Country</td>
                            <td class="col-lg-8 col-md-8 col-sm-8">
                                @Model.Data.CountryId
                            </td>
                        </tr>
                        <tr>
                            <td class="col-lg-4 col-md-4 col-sm-4 text-right">Timezone</td>
                            <td class="col-lg-8 col-md-8 col-sm-8">
                                @Model.Data.TimezoneId
                            </td>
                        </tr>
                        <tr>
                            <td class="text-right"></td>
                            <td>
                                <a href="@Url.Action("edit","servicelocation",new { area="admin", id = Model.Data.Id })" class="btn btn-default">Edit</a>
                                <a href="@Url.Action("index","servicelocation",new { area="admin"})" class="btn btn-default">Back</a>
                            </td>
                        </tr>
                    </table>
                }

            </div>
        </div>
    </div>
</div>