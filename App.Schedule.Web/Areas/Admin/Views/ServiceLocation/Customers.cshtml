@using PagedList;
@using PagedList.Mvc;
@using App.Schedule.Domains.ViewModel;
@model ResponseViewModel<IPagedList<BusinessCustomerViewModel>>

@{
    ViewBag.Title = "Business Employee Setup";
    Layout = "~/Views/Shared/_AfterLoginMaster.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Service Location Customer Setup</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @Html.Partial("~/Views/SubViews/_ErrorView.cshtml", Model)
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <ul class="nav nav-tabs">
            <li><a href="@Url.Action("location","servicelocation",new { area = "admin", id = ViewBag.Id})">Location</a></li>
            <li><a href="@Url.Action("hour","servicelocation",new { area = "admin", id = ViewBag.Id})">Business Hours</a></li>
            <li><a href="@Url.Action("holiday","servicelocation",new { area = "admin", id = ViewBag.Id})">Business Holiday</a></li>
            <li><a href="@Url.Action("employees","servicelocation",new { area = "admin", id = ViewBag.Id})">Employe</a></li>
            <li class="active"><a href="@Url.Action("customers","servicelocation",new { area = "admin", id = ViewBag.Id})">Customer</a></li>
            <li><a href="@Url.Action("offers","servicelocation",new { area = "admin", id = ViewBag.Id})">Offer</a></li>
        </ul>
        <div class="panel panel-default">
            <div class="panel-heading">
                <b>Information</b>
            </div>
            <div class="panel-body">
                @if (Model == null || Model.Data == null)
            {
                <text>Please try again later.</text>
            return;
        }
                <div class="tab-content">
                    <div class="tab-pane active">
                        <div class="col-lg-12">
                            <div class="row">
                                <table class="table table-condensed table-striped table-hover sortable" cellspacing="0" cellpadding="0">
                                    <thead>
                                        <tr>
                                            <th>
                                                First Name
                                            </th>
                                            <th>
                                                Last Name
                                            </th>
                                            <th>
                                                Email
                                            </th>
                                            <th>
                                                Contact Number
                                            </th>
                                            <th>
                                                Address
                                            </th>
                                            <th>
                                                Status
                                            </th>
                                            <th>
                                                Created
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Data)
                                    {
                                        if (item != null)
                                        {
                                            <tr>
                                                <td>
                                                    @item.FirstName
                                                </td>
                                                <td>
                                                    @item.LastName
                                                </td>
                                                <td>
                                                    @item.Email
                                                </td>
                                                <td>
                                                    @item.PhoneNumber
                                                </td>
                                                <td>
                                                    <p>
                                                        <small>
                                                            @item.Add1 @item.Add2 @item.City @item.State @item.StdCode
                                                        </small>
                                                    </p>
                                                </td>
                                                <td>
                                                    @item.IsActive
                                                </td>
                                                <td>
                                                    @item.Created
                                                </td>
                                            </tr>
                                    }
                                }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
                <div>
                    <span class="text-left">
                        <a href="@Url.Action("index", "accountsetup", new { area = "admin" })" class="btn btn-default btn-sm">
                            Account Setup
                        </a>
                    </span>
                    <span class="pull-right">
                        @Html.PagedListPager(Model.Data, page => Url.Action("Index", new { page }))
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>
