@using App.Schedule.Domains.ViewModel;
@model ResponseViewModel<List<ServiceLocationViewModel>>

@{
    ViewBag.Title = "Service Location";
    Layout = "~/Views/Shared/_AfterLoginMaster.cshtml";
}

<ul class="nav nav-tabs">
    <li class="active"><a href="@Url.Action("index", "hour", new { area = "admin" })">Service Locations</a></li>
</ul>
<div class="tab-content" style="padding:0px 10px;">
    <div class="tab-pane active">
        <div class="col-lg-12 margin10">
            <div class="row">
                @if (Model != null)
                {
                    if (!Model.Status)
                    {
                        <div class="alert alert-danger" role="alert">
                            <strong id="err_head">Info: </strong>
                            <span id="err_title">@Model.Message</span>
                        </div>
                    }
                    <table class="table table-striped">
                        <tr>
                            <td class="col-lg-10">
                                Service Location
                            </td>
                            <td class="col-lg-2 text-center">
                                Action
                            </td>
                        </tr>
                        @foreach (var item in Model.Data)
                        {
                            if (item != null)
                            {
                                <tr>

                                    <td style="vertical-align:top;">
                                        <b>@item.Name</b>
                                        <p>
                                            @item.Description
                                        </p>
                                        <p>
                                            @item.Add1, @item.Add2, @item.City, @item.State - @item.Zip.
                                        </p>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("location", "servicelocation", new { area = "admin", id = item.Id })" class="btn btn-default btn-sm btn-block">View</a>
                                        <a href="@Url.Action("edit", "servicelocation", new { area = "admin", id = item.Id })" class="btn btn-default btn-sm btn-block">Edit</a>
                                        <a href="@Url.Action("delete", "servicelocation", new { area = "admin", id = item.Id })" class="btn btn-default btn-sm btn-block">Delete</a>
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                }
            </div>
            <hr />
            <div class="text-center">
                <a href="@Url.Action("add", "servicelocation", new { area = "admin", id = ViewBag.BusinessId })" class="btn btn-default">
                   + Add
                </a>
                <a href="@Url.Action("index", "accountsetup", new { area = "admin" })" class="btn btn-default">
                    Account Setup
                </a>
            </div>
        </div>
    </div>
</div>
