@model App.Schedule.Domains.ViewModel.ResponseViewModel<List<App.Schedule.Domains.ViewModel.BusinessHourViewModel>>

@{
    ViewBag.Title = "Update Business Hour Setup";
    Layout = "~/Views/Shared/_AfterLoginMaster.cshtml";
}

<ul class="nav nav-tabs">
    <li class="active"><a href="@Url.Action("index", "hour", new { area = "admin" })">Business Hour Setup</a></li>
</ul>
<div class="tab-content" style="padding:0px 10px;">
    <div class="tab-pane active">
        <div class="col-lg-12 margin10">
            <div class="row">
                @if (Model != null)
                {
                    if (!Model.Status)
                    {
                        <div id="errorBox" class="alert alert-danger" role="alert">
                            <strong id="err_head">Error: </strong>
                            <span id="err_title">@Model.Message</span>
                        </div>
                    }
                    <table class="table table-striped">
                        <tr>
                            <td>
                                Day
                            </td>
                            <td>
                                Start Day
                            </td>
                            <td>
                                From
                            </td>
                            <td>
                                To
                            </td>
                            <td>
                                Action
                            </td>
                        </tr>
                        @for (var i = 0; i < 7; i++)
                        {
                            <tr>
                                <td class="text-left">
                                    @Enum.GetName(typeof(App.Schedule.Domains.ViewModel.DayFullType), (int)i)
                                    @Html.EditorFor(d => d.Data.FirstOrDefault().WeekDayId, new { htmlAttributes = new { @class = "form-control hidden", @placeholder = "From", text = i } })
                                </td>
                                <td>
                                    @Html.RadioButtonFor(d => d.Data.FirstOrDefault().IsStartDay, new { htmlAttributes = new { @type = "checkbox" } })
                                </td>
                                <td>
                                    @Html.EditorFor(d => d.Data.FirstOrDefault().From, new { htmlAttributes = new { @class = "form-control", @placeholder = "From", } })
                                </td>
                                <td>
                                    @Html.EditorFor(d => d.Data.FirstOrDefault().To, new { htmlAttributes = new { @class = "form-control", @placeholder = "To", } })
                                </td>
                                <td>
                                    <a href="#" class="btn btn-default">Split</a>
                                </td>
                            </tr>
                        }
                        <tr>
                            <td class="text-right"></td>
                            <td></td>
                            <td>
                                <a href="@Url.Action("edit","hour",new { area="admin"})" class="btn btn-success col-lg-4">Edit</a>
                                <a href="@Url.Action("index","hour",new { area="admin"})" class=" class="btn btn-default col-lg-4" style="margin-left:10px;">Back</a>
                            </td>
                            <td></td>
                            <td></td>
                        </tr>
                    </table>
                }
            </div>
        </div>
    </div>
</div>

