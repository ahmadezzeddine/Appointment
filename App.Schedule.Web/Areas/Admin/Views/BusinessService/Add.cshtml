@using App.Schedule.Domains.ViewModel;
@model ResponseViewModel<BusinessServiceViewModel>

@{
    ViewBag.Title = "Business Employee";
    Layout = "~/Views/Shared/_AfterLoginMaster.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">New Business Service Setup</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @Html.Partial("~/Views/SubViews/_ErrorView.cshtml", Model)
    </div>
</div>
<div class="row">
    <div class="col-lg-12">

        <div class="panel panel-default">
            <div class="panel-heading">
                <b>Information</b>
            </div>
            @using (Ajax.BeginForm("add", "businessservice", new AjaxOptions { }))
            {
                <div class="panel-body">
                    @if (Model == null || Model.Data == null)
                    {
                        <text>Please try again later.</text>
                        return;
                    }
                    <div class="tab-content" style="padding:0px 10px;">
                        <div class="row">
                            @Html.HiddenFor(d => d.Data.EmployeeId)
                            @Html.AntiForgeryToken()
                            <div class="form-group col-lg-6 required control-label">
                                <label>Name</label>
                                @Html.EditorFor(d => d.Data.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Name" } })
                            </div>
                            <div class="form-group col-lg-6">
                                <label>Cost</label>
                                @Html.EditorFor(d => d.Data.Cost, new { htmlAttributes = new { @class = "form-control", @placeholder = "Cost" } })
                            </div>
                            <div class="form-group col-lg-6">
                                <label>Description</label>
                                @Html.EditorFor(d => d.Data.Description, new { htmlAttributes = new { @class = "form-control", @placeholder = "Description" } })
                            </div>
                            <div class="form-group col-lg-6">
                                <label>Is Active</label>
                                <div class="form-control">
                                    @Html.CheckBoxFor(d => d.Data.IsActive)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-lg-12">
                            <input id="btnSave" class="btn btn-info btn-sm " type="button" value="Save" onclick="onSubmit(this,'@Request.UrlReferrer')" />
                            <input type="button" class="btn btn-default btn-sm" value="Back" onclick="@("window.location.href='" + @Request.UrlReferrer + "'");" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>