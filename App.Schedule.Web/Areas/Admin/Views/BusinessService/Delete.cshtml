@using App.Schedule.Domains.ViewModel;
@model ResponseViewModel<BusinessServiceViewModel>

@{
    ViewBag.Title = "Delete Business Employee";
    Layout = "~/Views/Shared/_AfterLoginMaster.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Business Service Setup</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @Html.Partial("~/Views/SubViews/_ErrorView.cshtml", Model)
    </div>
</div>
<div class="row">
    <div class="col-lg-12">

        <div class="panel panel-default">
            <div class="panel-heading">
                <b>Delete Business Service</b>
            </div>
            @using (Ajax.BeginForm("edit", "businessservice", new AjaxOptions { }))
            {
                <div class="panel-body">
                    @if (Model == null & Model.Data == null)
                    {
                        <text>Please try again later.</text>
                        return;
                    }
                    <div class="tab-content" style="padding:0px 10px;">
                        <div class="row">
                            @Html.HiddenFor(d => d.Data.EmployeeId)
                            @Html.HiddenFor(d => d.Data.Id)
                            @Html.AntiForgeryToken()
                            <div class="form-group col-lg-6">
                                <label>Name</label>
                                @Html.EditorFor(d => d.Data.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Name", @readonly="true" } })
                            </div>
                            <div class="form-group col-lg-6">
                                <label>Cost</label>
                                @Html.EditorFor(d => d.Data.Cost, new { htmlAttributes = new { @class = "form-control", @placeholder = "Cost", @readonly = "true" } })
                            </div>
                            <div class="form-group col-lg-6">
                                <label>Description</label>
                                @Html.EditorFor(d => d.Data.Description, new { htmlAttributes = new { @class = "form-control", @placeholder = "Description", @readonly = "true" } })
                            </div>
                            <div class="form-group col-lg-6">
                                <label>Is Active</label>
                                <div class="form-control">
                                    @Html.CheckBoxFor(d => d.Data.IsActive)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-lg-12">
                            <input id="btnDelete" class="btn btn-danger btn-sm " type="button" value="Deactive" onclick="onSubmit(this,'@Url.Action("index", "businessservice", new { area = "admin" })')" />
                            <input type="button" class="btn btn-default btn-sm" value="Back" onclick="@("window.location.href='" + @Url.Action("index", "businessservice", new { area = "admin" }) + "'");" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>