@using App.Schedule.Domains.ViewModel;
@model ResponseViewModel<DocumentCategoryViewModel>
@{
    ViewBag.Title = "Deactive Category";
    Layout = "~/Views/Shared/_AfterLoginMaster.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Deactive Category</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @Html.Partial("~/Views/SubViews/_ErrorView.cshtml", Model)
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @using (Ajax.BeginForm("deactive", new AjaxOptions { }))
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    Information
                </div>
                <div class="panel-body">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(d => d.Data.Id)
                    <div class="form-group col-lg-6">
                        <label>Name</label>
                        <div class="form-control">
                            @Model.Data.Name
                        </div>
                    </div>
                    @*<div class="form-group col-lg-6">
                        <label>Type</label>
                        <div class="form-control">
                            @Model.Data.Type
                        </div>
                    </div>*@
                    <div class="form-group col-lg-6">
                        <div class="text-left" style="height:60px; margin-top:20px;">
                            @if (!string.IsNullOrEmpty(Model.Data.PictureLink))
                            {
                                <img id="categoryImage" class="img-circle" src="@Model.Data.PictureLink" width="50" height="50" />
                            }
                            else
                            {
                                <img id="categoryImage" class="img-circle" src="~/Content/Images/NoImageThumb.gif" width="50" height="50" />
                            }
                        </div>
                    </div>
                    <div class="form-group col-lg-6">
                        <label>
                            @Html.CheckBoxFor(model => model.Data.IsActive, new { htmlAttributes = new { @class = "form-control" } })
                            is Active?
                        </label>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-lg-12">
                                <input id="btnSave" class="btn btn-info btn-sm " type="button" value="Submit" onclick="onSubmit(this,'@Url.Action("index", "documentcategory", new { area = "admin" })')" />
                                <input type="button" class="btn btn-default btn-sm" value="Back" onclick="@("window.location.href='" + @Url.Action("Index", "documentcategory") + "'");" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@section scripts{
    <script>
        function onFileChange(inputFile) {
            var file = inputFile.files[0];
            var reader = new FileReader();
            reader.readAsDataURL(file);
            reader.onload = function () {
                $("#Data_PictureLink").val(reader.result);
                $('#categoryImage').attr('src', reader.result);
            };
            reader.onerror = function (error) {
                console.log('Error: ', error);
            };
        }
    </script>
}