@using App.Schedule.Domains.ViewModel;
@model ResponseViewModel<MembershipViewModel>

@{
    ViewBag.Title = "Membership";
    Layout = "~/Views/Shared/_AfterLoginMaster.cshtml";
}

<ul class="nav nav-tabs">
    <li><a href="@Url.Action("index","account",new { area = "admin"})">Account Profile</a></li>
    <li><a href="@Url.Action("administrator","account",new { area = "admin"})">Administrator</a></li>
    <li class="active"><a href="@Url.Action("membership","account",new { area = "admin"})">Membership</a></li>
    <li><a href="@Url.Action("billing","account",new { area = "admin"})">Billing</a></li>
</ul>
<div class="tab-content" style="padding:0px 10px;">
    <div class="tab-pane active">
        <div class="col-lg-12 margin10">
            <div class="row">
                @if (Model != null)
                {
                    if (!Model.Status)
                    {
                        <div class="alert alert-danger" role="alert">
                            <strong id="err_head">Info: </strong>
                            <span id="err_title">@Model.Message</span>
                        </div>
                    }
                    <table class="table table-striped">
                        <tr>
                            <td class="col-lg-4 col-md-4 col-sm-4 text-right">Name</td>
                            <td class="col-lg-8 col-md-8 col-sm-8">
                                <b>@Model.Data.Title</b>
                            </td>
                        </tr>
                        <tr>
                            <td class="col-lg-4 col-md-4 col-sm-4  text-right">About</td>
                            <td class="col-lg-8 col-md-8 col-sm-8">
                                @Model.Data.Description.Substring(0, 50) <a href="#">More...</a>
                            </td>
                        </tr>
                        <tr>
                            <td class="col-lg-4 col-md-4 col-sm-4 text-right">Benifits</td>
                            <td class="col-lg-8 col-md-8 col-sm-8">
                                @Model.Data.Benifits
                            </td>
                        </tr>
                        <tr>
                            <td class="col-lg-4 col-md-4 col-sm-4  text-right">Unlimited</td>
                            <td class="col-lg-8 col-md-8 col-sm-8">
                                @{ 
                                    var isUnlimited = Model.Data.IsUnlimited ? "Yes" : "No";
                                }
                                @isUnlimited
                            </td>
                        </tr>
                        <tr>
                            <td class="text-right"></td>
                            <td>
                                <a href="@Url.Action("edit","membership",new { area="admin"})" class="btn btn-default">Edit</a>
                                <a href="@Url.Action("index","accountsetup",new { area="admin"})" class="btn btn-default" >Back</a>
                            </td>
                        </tr>
                    </table>
                }
            </div>
        </div>
    </div>
</div>