@using App.Schedule.Domains.ViewModel;
@model ResponseViewModel<BusinessEmployeeUpdateSecurityViewModel>

@{
    ViewBag.Title = "Update Security";
    Layout = "~/Views/Shared/_AfterLoginMaster.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Account Setup</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @Html.Partial("~/Views/SubViews/_ErrorView.cshtml", Model)
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <b>Information</b>
            </div>
            @using (Ajax.BeginForm("security", "businessadmin", new AjaxOptions { }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(d => d.Data.Id)
                @Html.HiddenFor(d => d.Data.Email)
                <div class="panel-body">
                    @if (Model == null || Model.Data == null)
                    {
                        <text>Please try again later.</text>
                        return;
                    }
                    <div class="tab-pane">
                        <div class="row col-lg-12">
                            <div class="form-group col-lg-6">
                                <label>Email</label>
                                <div class="form-control">
                                    @Model.Data.Email
                                </div>
                            </div>
                            <div class="form-group col-lg-6 required control-label">
                                <label>Current Password</label>
                                @Html.EditorFor(d => d.Data.OldPassword, new { htmlAttributes = new { @class = "form-control", @type = "password", @placeholder = "Current Password" } })
                            </div>
                            <div class="form-group col-lg-6 required control-label">
                                <label>New Password</label>
                                @Html.EditorFor(d => d.Data.Password, new { htmlAttributes = new { @class = "form-control", @type = "password", @placeholder = "New Password" } })
                            </div>
                            <div class="form-group col-lg-6 required control-label">
                                <label>Confirm New Password</label>
                                @Html.EditorFor(d => d.Data.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", @type = "password", @placeholder = "Confirm New Password" } })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-lg-12">
                            <input id="btnUpdate" class="btn btn-info btn-sm " type="button" value="Update" onclick="onSubmit(this,'@Url.Action("logout","dashboard", new { area = "admin"})')" />
                            <input type="button" class="btn btn-default btn-sm" value="Back" onclick="@("window.location.href='" + @Url.Action("index","accountsetup",new { area="admin"}) + "'");" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>