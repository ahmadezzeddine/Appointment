@using App.Schedule.Domains.ViewModel;
@model ResponseViewModel<BusinessEmployeeViewModel>

@{
    ViewBag.Title = "Administrator";
    Layout = "~/Views/Shared/_AfterLoginMaster.cshtml";
}
<ul class="nav nav-tabs">
    <li class="active"><a href="@Url.Action("Administrator","Account",new { area = "admin"})">Administrator</a></li>
</ul>
<div class="tab-content" style="padding:0px 10px;">
    <div class="tab-pane active">
        <div class="col-lg-12 margin10">
            <div class="row">
                @if (Model != null)
                {
                    if (!Model.Status)
                    {
                        <div class="alert alert-danger" role="alert">
                            <strong id="err_head">Info: </strong>
                            <span id="err_title">@Model.Message</span>
                        </div>
                    }
                    <table class="table table-striped">
                        <tr>
                            <td class="col-lg-4 col-md-4 col-sm-4 text-right">First Name</td>
                            <td class="col-lg-8 col-md-8 col-sm-8">
                                <b>@Model.Data.FirstName</b>
                            </td>
                        </tr>
                        <tr>
                            <td class="col-lg-4 col-md-4 col-sm-4 text-right">Last Name</td>
                            <td class="col-lg-8 col-md-8 col-sm-8">
                                @Model.Data.LastName
                            </td>
                        </tr>
                        <tr>
                            <td class="col-lg-4 col-md-4 col-sm-4 text-right">Phone No.</td>
                            <td class="col-lg-8 col-md-8 col-sm-8">
                                @Model.Data.PhoneNumber
                            </td>
                        </tr>
                        <tr>
                            <td class="col-lg-4 col-md-4 col-sm-4 text-right">Email Id</td>
                            <td class="col-lg-8 col-md-8 col-sm-8">
                                @Model.Data.Email
                            </td>
                        </tr>
                        <tr>
                            <td class="col-lg-4 col-md-4 col-sm-4 text-right">Password</td>
                            <td class="col-lg-8 col-md-8 col-sm-8">
                                <b>(protected)</b>
                            </td>
                        </tr>
                        <tr>
                            <td class="text-right"></td>
                            <td>
                                <a href="@Url.Action("edit","businessadmin",new { area="admin"})" class="btn btn-default">Edit</a>
                                <a href="@Url.Action("index","accountsetup",new { area="admin"})" class="btn btn-default" style="margin-left:10px;">Back</a>
                            </td>
                        </tr>
                    </table>
                }
            </div>
        </div>
    </div>
</div>