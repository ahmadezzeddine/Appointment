@using App.Schedule.Domains.ViewModel;
@model ResponseViewModel<BusinessEmployeeViewModel>

@{
    ViewBag.Title = "Update Profile";
    Layout = "~/Views/Shared/_AfterLoginEmployeeMaster.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        @Html.Partial("~/Views/SubViews/_ErrorView.cshtml", Model)
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <b>Update Profile Information</b>
            </div>
            @using (Ajax.BeginForm("update", "account", new AjaxOptions { }))
            {
                <div class="panel-body">
                    @if (Model == null & Model.Data == null)
                    {
                        <text>Please try again later.</text>
                        return;
                    }
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(d => d.Data.Id)
                    @Html.HiddenFor(d => d.Data.ConfirmPassword)
                    @Html.HiddenFor(d => d.Data.ServiceLocationId)
                    <div class="tab-pane">
                        <div class="row">
                            <div class="form-group col-lg-6">
                                <label>First Name</label>
                                @Html.EditorFor(model => model.Data.FirstName, new { htmlAttributes = new { @class = "form-control", placeholder = "First Name" } })
                            </div>
                            <div class="form-group col-lg-6">
                                <label>Last Name</label>
                                @Html.EditorFor(model => model.Data.LastName, new { htmlAttributes = new { @class = "form-control", placeholder = "Last Name" } })
                            </div>
                            <div class="form-group col-lg-6">
                                <label>Std Code</label>
                                @Html.EditorFor(model => model.Data.STD, new { htmlAttributes = new { @class = "form-control", placeholder = "Std Code" } })
                            </div>
                            <div class="form-group col-lg-6">
                                <label>Phone</label>
                                @Html.EditorFor(model => model.Data.PhoneNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "Phone Number" } })
                            </div>
                            <div class="form-group col-lg-6">
                                <label>Email</label>
                                <div class="form-control">
                                    @Model.Data.Email
                                    @Html.HiddenFor(d => d.Data.Email)
                                </div>
                            </div>
                            <div class="form-group col-lg-6">
                                <label>Password</label>
                                @Html.EditorFor(d => d.Data.Password, new { htmlAttributes = new { @class = "form-control", @type = "password", @placeholder = "Password" } })
                                <div class="text-info">Enter your password to update information</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-lg-12">
                            <input id="btnUpdate" class="btn btn-info btn-sm " type="button" value="Update" onclick="onSubmit(this,'@Url.Action("index","account", new { area = "employee" })')" />
                            <input type="button" class="btn btn-default btn-sm" value="Back" onclick="@("window.location.href='" + @Url.Action("index","dashboard",new { area="employee"}) + "'");" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $("#Data_Password").on('keyup', function () {
                console.log($("#Data_Password").val());
                $("#Data_ConfirmPassword").val($("#Data_Password").val());
            });
        });
    </script>
}