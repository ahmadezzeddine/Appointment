@using App.Schedule.Domains.ViewModel;
@model ResponseViewModel<AppointmentViewModel>

@{
    ViewBag.Title = "Appointment";
    Layout = "~/Views/Shared/_AfterLoginEmployeeMaster.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Deactive Appointment</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @Html.Partial("~/Views/SubViews/_ErrorView.cshtml", Model)
    </div>
</div>
<div class="row">
    <div class="col-lg-12">

        <div class="panel panel-default">
            <div class="panel-heading">
                <b>Information</b>
            </div>
            @using (Ajax.BeginForm("deactive", "appointment", new AjaxOptions { }))
            {
                <div class="panel-body">
                    @if (Model == null || Model.Data == null)
                    {
                        <text>Please try again later.</text>
                        
                    }
                    <div class="tab-content">
                        <div class="row">
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(d => d.Data.Id)
                            @Html.HiddenFor(d => d.Data.Title)
                            <div class="form-group col-lg-6">
                                <label>Title</label>
                                <div class="form-control">
                                    @Model.Data.Title
                                </div>
                            </div>
                            <div class="form-group col-lg-6">
                                <label>Global Id</label>
                                <div class="form-control">
                                    @Model.Data.GlobalAppointmentId
                                </div>
                            </div>
                            <div class="form-group col-lg-6">
                                <label>Is Active</label>
                                <div class="form-control">
                                    @Html.CheckBoxFor(d => d.Data.IsActive)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-lg-12">
                            <input id="btnSave" class="btn btn-info btn-sm " type="button" value="Update" onclick="onSubmit(this,'@Url.Action("index", "appointment", new { area = "employee" })')" />
                            <input type="button" class="btn btn-default btn-sm" value="Back" onclick="@("window.location.href='" + @Url.Action("index", "appointment", new { area = "employee" }) + "'");" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section scripts{
    <script>
        function isAllDay() {
            var isChecked = $('#Data_IsAllDayEvent').prop('checked');
            console.log('print:: ', isChecked);
            if (isChecked) {
                $("#timeView").attr('style', 'display: none;');
            }
            else {
                $("#timeView").attr('style', 'display: block;');
            }
        }
    </script>
}