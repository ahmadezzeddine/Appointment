@using App.Schedule.Domains.ViewModel;
@model ResponseViewModel<AppointmentFeedbackViewModel>

@{
    ViewBag.Title = "Feedback";
    Layout = "~/Views/Shared/_AfterLoginCustomerMaster.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        @Html.Partial("~/Views/SubViews/_ErrorView.cshtml", Model)
    </div>
</div>
<div class="row">
    <div class="col-lg-12">

        <div class="panel panel-default">
            <div class="panel-heading">
                <b>Add Feedback</b>
            </div>
            @using (Ajax.BeginForm("add_feedback", "appointment", new AjaxOptions { }))
            {
                <div class="panel-body">
                    @if (Model == null || Model.Data == null)
                    {
                        <text>Please try again later.</text>
                        
                    }
                    <div class="tab-content" style="padding:0px 10px;">
                        <div class="row">
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(d => d.Data.AppointmentId)
                            <div class="form-group col-lg-12">
                                @Html.EditorFor(d => d.Data.Feedback, new { htmlAttributes = new { @class = "form-control", @placeholder = "Type your text here" } })
                            </div>
                            <div class="form-group col-lg-6">
                                <label>Rate</label>
                                @Html.DropDownListFor(d => d.Data.Rating, new SelectList(ViewBag.Rating, "Value", "Text"), new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-lg-12">
                            <input id="btnSave" class="btn btn-info btn-sm " type="button" value="Save" onclick="onSubmit(this,'@Url.Action("feedbacks", "appointment", new { area = "customer", id = Model.Data.AppointmentId })')" />
                            <input type="button" class="btn btn-default btn-sm" value="Back" onclick="@("window.location.href='" + @Url.Action("feedbacks", "appointment", new { area = "customer", id = Model.Data.AppointmentId }) + "'");" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>