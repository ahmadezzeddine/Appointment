@using App.Schedule.Domains.ViewModel;
@model ServiceDataViewModel<BusinessCategoryViewModel>
@{
    ViewBag.Title = "Deactive Business Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        @Html.Partial("~/Views/SubViews/_Error.cshtml", Model)
        <div class="bg-box bg-bluegray">
            @using (Ajax.BeginForm("Deactive", new AjaxOptions { }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(d => d.Data.Id)
                <div class="form-group input-group input-group-lg">
                    <label class="input-lg input-group-addon">
                        Are you sure want to deactive?
                    </label>
                </div>
                <div class="form-horizontal">

                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="input-group">
                                @Html.EditorFor(model => model.Data.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Title" } })
                                <span class="input-group-addon" id="sizing-addon2">Name</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    @Html.CheckBoxFor(model => model.Data.IsActive, new { htmlAttributes = new { @class = "form-control" } })
                                </span>
                                <span class="form-control">
                                    Status
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <input id="btnRemove" type="button" value="Deactive" onclick="onSubmit(this,'@Url.Action("Index","BusinessCategory")');" class="btn btn-sm btn-danger col-md-6" />
                            <input type="button" class="btn btn-sm btn-default col-md-6" value="Back" onclick="@("window.location.href='" + @Url.Action("Index", "BusinessCategory") + "'");" />
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>

</div>
