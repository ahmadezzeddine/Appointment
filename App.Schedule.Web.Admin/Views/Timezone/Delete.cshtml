@using App.Schedule.Domains.ViewModel;
@model ServiceDataViewModel<TimezoneViewModel>
@{
    ViewBag.Title = "Delete Timezone";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        @Html.Partial("~/Views/SubViews/_Error.cshtml", Model)

        <div class="bg-box bg-bluegray">
            @using (Ajax.BeginForm("Delete", new AjaxOptions { }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Data.Id);
                <div class="form-group input-group input-group-lg">
                    <label class="input-lg input-group-addon">
                        Are you sure want to delete?
                    </label>
                </div>
                <div class="form-horizontal">

                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="input-group">
                                @Html.EditorFor(model => model.Data.Title, new { htmlAttributes = new { @class = "form-control", placeholder = "Title", @disabled="disabled" } })
                                <span class="input-group-addon" id="sizing-addon2">Title</span>
                            </div>
                        </div>
                    </div>

                    @if (ViewBag.CountryId != null)
                    {
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="input-group">
                                    @Html.DropDownListFor(model => model.Data.CountryId, new SelectList(ViewBag.CountryId, "Value", "Text"), "--Select Country--", new { @class = "form-control", @disabled = "disabled" })
                                    <span class="input-group-addon" id="sizing-addon2">Currency Code</span>
                                </div>
                            </div>
                        </div>
                    }
                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    @Html.CheckBoxFor(model => model.Data.IsDST, new { htmlAttributes = new { @class = "form-control", @disabled="disabled" } })
                                </span>
                                <span class="form-control">
                                    IsDST
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <input id="btnDelete" type="button" value="Delete" onclick="onSubmit(this,'@Url.Action("Index","Timezone")');" class="btn btn-sm btn-danger col-md-6" />
                            <input type="button" class="btn btn-sm btn-default col-md-6" value="Back" onclick="@("window.location.href='" + @Url.Action("Index", "Timezone") + "'");" />
                        </div>
                    </div>

                </div>
            }
        </div>
    </div>
</div>
