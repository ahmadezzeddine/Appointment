@using App.Schedule.Domains.ViewModel;
@model ServiceDataViewModel<MembershipViewModel>
@{
    ViewBag.Title = "View Membership";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">View Membership</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @Html.Partial("~/Views/SubViews/_Error.cshtml", Model)
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-book fa-fw"></i> Information
            </div>
            <div class="panel-body">
                <div class="form-group col-lg-6">
                    <label>Title</label>
                    <div class="form-control">
                        @Model.Data.Title
                    </div>
                </div>
                <div class="form-group col-lg-6">
                    <label>Membership Price</label>
                    <div class="form-control">
                        @Model.Data.Price
                    </div>
                </div>
                <div class="form-group col-lg-6">
                    <label>Total Customer Allowed</label>
                    <div class="form-control">
                        @Model.Data.TotalCustomer
                    </div>
                </div>
                <div class="form-group col-lg-6">
                    <label>Total Employee</label>
                    <div class="form-control">
                        @Model.Data.TotalEmployee
                    </div>
                </div>
                <div class="form-group col-lg-6">
                    <label>Total Location</label>
                    <div class="form-control">
                        @Model.Data.TotalLocation
                    </div>
                </div>
                <div class="form-group col-lg-6">
                    <label>Total Offers</label>
                    <div class="form-control">
                        @Model.Data.TotalOffers
                    </div>
                </div>
                <div class="form-group col-lg-6">
                    <label>Total Appointments</label>
                    <div class="form-control">
                        @Model.Data.TotalAppointment
                    </div>
                </div>
                <div class="form-group col-lg-6">
                    <label>Benifits</label>
                    <div class="form-control">
                        @Model.Data.Benifits
                    </div>
                </div>
                <div class="form-group col-lg-6">
                    <label>Description</label>
                    <div class="form-control">
                        @Model.Data.Description
                    </div>
                </div>
                <div class="form-group col-lg-6">
                    <label>
                        is Unlimited?
                    </label>
                    <div class="form-control">
                        @Model.Data.IsUnlimited
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="col-lg-12">
                            <input type="button" class="btn btn-default btn-sm" value="Back" onclick="@("window.location.href='" + @Url.Action("index", "membership") + "'");" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
